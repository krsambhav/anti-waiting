{
  "manifest_version": 2,
  "name": "US Visa Scheduling Helper",
  "version": "1.2",
  "permissions": [
    "tabs",
    "browsingData",
    "https://www.usvisascheduling.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Start US Visa Scheduling"
  },
  "content_scripts": [
    {
      "matches": ["https://www.usvisascheduling.com/*"],
      "css": ["overlay.css"],
      "js": ["content.js"]
    }
  ]
}
